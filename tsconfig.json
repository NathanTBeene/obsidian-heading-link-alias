{
  "compilerOptions": {
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "CommonJS",
    "target": "ES6",
    "outDir": ".",
    "allowJs": true,
    "noImplicitAny": false,
    "isolatedModules": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"]
  },
  "include": ["main.ts"],
  "exclude": ["node_modules"]
}
